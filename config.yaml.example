# Non-sensitive configuration example
# Copy this file to config.yaml and customize for your environment

# Kafka Configuration
kafka:
  # Kafka brokers are loaded from KAFKA_BROKERS environment variable
  # Add fallback brokers here for development only
  brokers: []  # Fallback to environment variable
  group_id: "sapphire-mf-consumer-group"
  topic: "mf-events"
  auto_offset_reset: "earliest"       # or "latest"

# Service Configuration
service:
  port: 8080  # Can be overridden by SERVICE_PORT env var
  environment: "development"  # development, production, test
  host: ""  # Empty string means bind to all interfaces (0.0.0.0)

# Application settings (non-sensitive)
app:
  name: "sapphire-mf"
  version: "1.0.0"
  timeout: 30  # Request timeout in seconds
  max_connections: 1000
  
# Logging configuration
logging:
  level: "info"  # debug, info, warn, error
  format: "json"  # json, text
  
# Health check configuration  
health:
  check_interval: 30  # seconds
  timeout: 5  # seconds